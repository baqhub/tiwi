{
  "name": "tiwi",
  "license": "MIT",
  "version": "1.0.1",
  "description": "React library to create components with Tailwind styles baked in.",
  "author": "Baqhub",
  "homepage": "https://github.com/baqhub/tiwi",
  "bugs": "https://github.com/baqhub/tiwi/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/baqhub/tiwi.git"
  },
  "keywords": [
    "baqhub",
    "javascript",
    "typescript",
    "react",
    "react-native",
    "variants",
    "tailwind",
    "style",
    "css"
  ],
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "ts": "tsc --build --watch ./tsconfig.cjs.json ./tsconfig.json",
    "build": "tsc --build ./tsconfig.cjs.json ./tsconfig.json && tsconfig-to-dual-package",
    "build:clean": "rm -rf ./build",
    "publish": "yarn npm publish",
    "test": "vitest"
  },
  "module": "./build/esm/src/index.js",
  "main": "./build/cjs/src/index.js",
  "types": "./build/cjs/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./build/esm/src/index.js",
      "require": "./build/cjs/src/index.js"
    }
  },
  "dependencies": {
    "react": "^18.3.1",
    "tailwind-merge": "^2.5.4",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.0.1",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@typescript-eslint/eslint-plugin": "8.13.0",
    "@typescript-eslint/parser": "8.13.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-react-hooks": "5.0.0",
    "globals": "15.12.0",
    "jsdom": "25.0.1",
    "prettier": "3.3.3",
    "prettier-plugin-organize-imports": "4.1.0",
    "prettier-plugin-tailwindcss": "0.6.8",
    "react-dom": "18.3.1",
    "tailwindcss": "3.4.14",
    "tsconfig-to-dual-package": "1.2.0",
    "typescript": "5.6.3",
    "vitest": "2.1.4"
  }
}